<?xml version="1.0"?>
<robot name="ball" xmlns:xacro="http://wiki.ros.org/xacro">

    <xacro:macro name="sphere_link" params="name r mass:=0.1 *origin">
        <link name="${name}">
            <collision>
                <xacro:insert_block name="origin"/>
                <geometry>
                    <sphere radius="${r}"/>
                </geometry>
            </collision>
            <visual>
                <xacro:insert_block name="origin"/>
                <geometry>
                    <sphere radius="${r}"/>
                </geometry>
            </visual>
            <inertial>
                <mass value="${mass}"/>
                <xacro:insert_block name="origin"/>
                <inertia ixx="${(2/3)*mass*r*r}" ixy="0.0" ixz="0.0"
                         iyy="${(2/3)*mass*r*r}" iyz="0.0"
                         izz="${(2/3)*mass*r*r}"/>
            </inertial>
        </link>
    </xacro:macro>

    <xacro:sphere_link name="ball_link" r="0.07" mass="0.2">
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:sphere_link>

    <gazebo reference="ball_link">
        <material>Gazebo/Yellow</material>
        <collision>
            <surface>
                <bounce>
                    <restitution_coefficient>0.7</restitution_coefficient>
                    <threshold>0.01</threshold>
                </bounce>
                <contact>
                    <ode>
                        <max_vel>5</max_vel>
                    </ode>
                </contact>
            </surface>
        </collision>
        <mu1>1.0</mu1>
        <mu2>1.0</mu2>
        <kp>500000</kp>
        <minDepth>0.001</minDepth>
    </gazebo>

    <gazebo>
        <plugin name="large_wz" filename="libInitialVelocityPlugin.so">
            <linear>$(arg vel_x) $(arg vel_y) $(arg vel_z)</linear>
            <angular>0 0 0</angular>
        </plugin>
    </gazebo>

